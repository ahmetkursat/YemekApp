@model UpdateProductDto


@{
	ViewData["Title"] = "UpdateProduct";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori işlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Kategory Girişi</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="ProductID" />
							<div class="form-group">
								<label for="categoryname">Kategori Adını Güncelle</label>
								<input type="text" class="form-control" asp-for="ProductName" id="ProductName" placeholder="ProductName">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Kategory Güncelle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>



