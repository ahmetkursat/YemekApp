@using SignalRWebUI.Dtos.FeatureDtos

@model List<ResultFeatureDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Feature İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Feature Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Feature ile ilgili işlemleri aşagıdan yapabilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">DiscountID</th>
									<th scope="col">Title1 </th>
									<th scope="col">Title2</th>
									<th scope="col">Title3</th>
									<th scope="col">Description1</th>
									<th scope="col">Description2</th>
									<th scope="col">Description3</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.FeatureID</td>
										<td>@item.Title1</td>
										<td>@item.Title2</td>
										<td>@item.Title3</td>
										<td>@item.Description1</td>
										<td>@item.Description2</td>
										<td>@item.Description3</td>
										<td><a href="/Feature/DeleteFeature/@item.FeatureID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Feature/DeleteFeature/@item.FeatureID" class="btn btn-outline-danger">Durum</a></td>
										<td><a href="/Feature/UpdateFeature/@item.FeatureID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Feature/CreateFeature" class="btn btn-primary">Yeni Feature Girişi</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>

