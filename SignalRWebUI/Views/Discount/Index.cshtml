@using SignalRWebUI.Dtos.DiscountDtos

@model List<ResultDiscountDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Discount İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Discount Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Discount ile ilgili işlemleri aşagıdan yapabilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">DiscountID</th>
									<th scope="col">Description </th>
									<th scope="col">Amount</th>
									<th scope="col">ImageUrl</th>
									<th scope="col">Title</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.DiscountID</td>
										<td>@item.Description</td>
										<td>@item.Amount</td>
										<td>@item.ImageUrl</td>
										<td>@item.Title</td>
										<td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-outline-danger">Durum</a></td>
										<td><a href="/Discount/UpdateDiscount/@item.DiscountID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Discount/CreateDiscount" class="btn btn-primary">Yeni Category Girişi</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>

