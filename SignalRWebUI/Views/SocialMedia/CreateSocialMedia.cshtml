@model SignalRWebUI.Dtos.SocialMediaDtos.CreateSocialMediaDto


@{
	ViewData["Title"] = "CreateCategory";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Media işlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Sosyal Media Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Title">Başlık Giriniz</label>
								<input type="Title" class="form-control" asp-for="Title" id="Title" placeholder="Enter Email">
							</div>
							<div class="form-group">
								<label for="Icon">İkon Giriniz</label>
								<input type="Icon" class="form-control" asp-for="Icon" id="Icon" placeholder="Enter Email">
							</div>
							<div class="form-group">
								<label for="Url">Link Giriniz</label>
								<input type="Url" class="form-control" asp-for="Url" id="Url" placeholder="Enter Email">
							</div>
							
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Sosyal Media HESABI Ekle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>

