@model SignalRWebUI.Dtos.AboutDtos.CreateBookingDto


@{
	ViewData["Title"] = "CreateAbout";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori işlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Kategory Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Title">Kategori Başlığı Giriniz</label>
								<input type="text" class="form-control" asp-for="Title" id="Title" placeholder="Enter Email">
							</div>
							<div class="form-group">
								<label for="Description">Kategori İçeriği Giriniz</label>
								<textarea rows="5" class="form-control" asp-for="Description" id="Description"></textarea>
							</div>
							<div class="form-group">
								<label for="ImageUrl">Görsel Url Giriniz</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl" placeholder="Enter Email">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Hakkımda Ekle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>

